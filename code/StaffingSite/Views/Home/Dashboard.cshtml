@model StaffingSite.Models.UserProfile
<div class="col-lg-12 col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading" style="font-weight:bold;background-color: #3c8dbc !important;color: white;">
            Available Positions
            <span style="float:right;" id="today-homework">Today</span>
        </div>
        <div class="panel-body">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;">
                <thead>
                    <tr role="row">
                        <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" aria-sort="ascending">SrNo.</th>
                        <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Designation</th>
                        <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">LOB</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Work Location</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Shift  Timing</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Roles and Responsibilities</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Skills Required</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Taleo Number</th>
                        <th tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var Positions in Model.list)
                    {
                        
                      <tr role="row" class="odd">
                        <td>1.</td>
                        <td>@Positions.designation</td>
                        <td>@Positions.lob</td>
                        <td>@Positions.worklocation</td>
                        <td>@Positions.shift</td>
                        <td>@Positions.role</td>
                        <td>@Positions.Skills</td>
                        <td>@Positions.taleonumber</td>
                        <td>@Html.ActionLink("Reffer", "Index", "Employee", new { JobId = Positions._id }, null) </td>
                    </tr>  
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
