@model StaffingSite.Models.UserProfile
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Mercer</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <style>
        .input-validation-error {
            border: 1px solid #f00;
            background-color: #fee;
        }
        
    </style>
</head>
</head>
<body class="loginbody">
    <body class="hold-transition login-page">
        <div class="login-box" style="margin:12% 2% 0% 2%">
            <div class="login-box-body" style="background:none;">
                <div style="width:100%;text-align:center;"><img src="~/dist/img/mercer.png" style='width:230px;margin:40px 0 40px 0;'></div>
                @*<form action="index.html" method="post">*@
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(a => a.username, new { @class = "form-control", placeholder = "Username" })<br />
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        @*<td>@Html.LabelFor(a => a.username)</td>
                            <td>@Html.TextBoxFor(a => a.username)</td>
                            <td>@Html.ValidationMessageFor(a => a.username)</td>*@
                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(a => a.password, new { @class = "form-control", placeholder = "Password" })<br />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat" style="margin-left:15px;">Sign In</button>
                        </div>
                        <div class="col-xs-4">
                            <button type="button" class="btn btn-primary btn-block btn-flat">Help</button>
                        </div>
                    </div>
<div class="form-group has-feedback" style="margin-bottom:40px">
    @if (@ViewBag.Message != null)
                        {
    <div class="form-group has-feedback" style="color:red;">
        @ViewBag.Message
    </div>
                        }
</div>
                }
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryval")
                @*</form>*@
            </div>
        </div>
    </body>
</html>
