@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model StaffingSite.Models.UserProfile

<div class="col-lg-12 col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading" style="font-weight:bold;background-color: #3c8dbc !important;color: white;">
            Reffered Candidates
            <span style="float:right;" id="today-homework"></span>
        </div>
@if (Model.ReferedCandidatesList.Count > 0)
        {
        <div class="panel-body">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;">
                <thead>
                    <tr role="row">
                        <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" aria-sort="ascending">Ref.No.</th>
                        <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Position</th>
                        <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Candidate Name</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Email id</th>
                        <th width=200 class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1">Mobile Number</th>
                        <th width=100 tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var ReferredList in Model.ReferedCandidatesList)
                    {

                        <tr role="row">
                            <td>@ReferredList.referenceid</td>
                            <td>@ReferredList.title</td>
                            <td>@ReferredList.FullName</td>
                            <td>@ReferredList.emailid</td>
                            <td>@ReferredList.mobile</td>
                            <td>@Html.ActionLink("Status", "Dashboard", "Employee", new { JobId = ReferredList._id }, null) </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
       }
else
{
    <h5 style="margin:5px;">No record found.</h5>
}
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $(document).ready(function () {
        $('#history').addClass('active');
    });
</script>