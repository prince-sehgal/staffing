<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href=@Url.Content("~/bootstrap/css/bootstrap.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/dist/css/font-awesome.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/dist/css/ionicons.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/dist/css/AdminLTE.css")>
    <link rel="stylesheet" href=@Url.Content("~/dist/css/skins/_all-skins.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/plugins/iCheck/flat/blue.css")>
    <link href=@Url.Content("~/dist/js/datatables/jquery.dataTables.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/dist/js/datatables/buttons.bootstrap.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/dist/js/datatables/fixedHeader.bootstrap.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/dist/js/datatables/responsive.bootstrap.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/dist/js/datatables/scroller.bootstrap.min.css") rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href=@Url.Content("~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="#" class="logo">
                <span class="logo-lg">Mercer</span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                       
