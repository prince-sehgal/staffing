    <script src="~/dist/js/pages/dashboard.js"></script>
    <script src="~/dist/js/demo.js"></script>
    <script src="~/dist/js/moment/moment.min.js"></script>
    <script src="~/dist/js/fullcalendar.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js"></script>
    <script src="~/dist/js/datatables/jquery.dataTables.min.js"></script>
    <script src="~/dist/js/datatables/dataTables.bootstrap.js"></script>
    <script src="~/dist/js/datatables/dataTables.buttons.min.js"></script>
    <script src="~/dist/js/datatables/buttons.bootstrap.min.js"></script>
    <script src="~/dist/js/datatables/buttons.html5.min.js"></script>
    <script src="~/dist/js/datatables/dataTables.fixedHeader.min.js"></script>
    <script src="~/dist/js/datatables/dataTables.responsive.min.js"></script>
    <script src="~/dist/js/datatables/responsive.bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $.mobile.loading().hide();
            $('#datatable-responsive').DataTable(
                     {
                         "bPaginate": false,
                         "bFilter": false,
                         "bInfo": false,
                         "paging": false,
                         "lengthChange": false,
                         "searching": false,
                         "ordering": true,
                         "info": false,
                     }
                   );
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
    