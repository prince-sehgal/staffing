                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src=@Url.Content("~/dist/img/user1-128x128.jpg") class="user-image" alt="User Image">
                                <span class="hidden-xs">@Session["name"]</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src=@Url.Content("~/dist/img/user1-128x128.jpg") class="img-circle" alt="User Image">
                                    <p>
                                        @Session["employeeid"]
                                        <small>@Session["lob"]</small>
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="~/home/dashboard" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a id="sign-out" href="~/home/logout" class="btn btn-default btn-flat">Sign out</a>
