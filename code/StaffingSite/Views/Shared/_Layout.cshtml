                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar" style="z-index:1530;">
            <section class="sidebar">
                <ul class="sidebar-menu">
                    @if (Convert.ToString(Session["usertype"]) == "1")
                    { 
                    <li class="treeview" id="dashboard">
                        <a href="~/home/dashboard">
                            <i class="fa fa-dashboard"></i><span>Dashboard</span>
                        </a>
                    </li>
                    <li class="treeview" id="refer">
                        <a href="~/Employee/Index">
                            <i class="fa fa-list-alt"></i>
                            <span>
                                Refer someone
                            </span>
                        </a>
                    </li>
                    <li class="treeview" id="history">
                        <a href="~/Employee/History">
                            <i class="fa fa-history"></i>
                            <span>
                                History
                            </span>
                        </a>
                    </li>
                    }
                    else
                    { 
                         <li class="treeview" id="hr-dashboard">
                        <a href="~/home/hr">
                            <i class="fa fa-dashboard"></i><span>Dashboard</span>
                        </a>
                    </li>
                    <li class="treeview" id="open-position">
                        <a href="~/Home/Position">
                            <i class="fa fa-list-alt"></i>
                            <span>
                                Open Position
                            </span>
                        </a>
                    </li>
                    }
            </section>
        </aside>
        <div class="content-wrapper">
            <section class="content">
                <div class="row" id="dashboard">
          @RenderBody()
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right">
                <strong>Copyright &copy; 2017 <a href="#">Mercer India Consulting Pvt. Ltd.</a></strong>
            </div>
            &nbsp;
        </footer>
        <div class="control-sidebar-bg"></div>
